<Window
    x:Class="VirtualKeyboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="16" Spacing="4" Width="760">
            
            <!-- Row 1 -->
            <Grid Height="40" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Esc" Tag="Esc" Click="KeyButton_Click"/>
                <Button Grid.Column="1" Content="1" Tag="1" Click="KeyButton_Click"/>
                <Button Grid.Column="2" Content="2" Tag="2" Click="KeyButton_Click"/>
                <Button Grid.Column="3" Content="3" Tag="3" Click="KeyButton_Click"/>
                <Button Grid.Column="4" Content="4" Tag="4" Click="KeyButton_Click"/>
                <Button Grid.Column="5" Content="5" Tag="5" Click="KeyButton_Click"/>
                <Button Grid.Column="6" Content="6" Tag="6" Click="KeyButton_Click"/>
                <Button Grid.Column="7" Content="7" Tag="7" Click="KeyButton_Click"/>
                <Button Grid.Column="8" Content="8" Tag="8" Click="KeyButton_Click"/>
                <Button Grid.Column="9" Content="9" Tag="9" Click="KeyButton_Click"/>
                <Button Grid.Column="10" Content="0" Tag="0" Click="KeyButton_Click"/>
                <Button Grid.Column="11" Content="-" Tag="-" Click="KeyButton_Click"/>
                <Button Grid.Column="12" Content="+" Tag="+" Click="KeyButton_Click"/>
                <Button Grid.Column="13" Content="=" Tag="=" Click="KeyButton_Click"/>
                <Button Grid.Column="14" Content="Backspace" Tag="Backspace" Click="KeyButton_Click" HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Row 2 -->
            <Grid Height="40" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Tab" Tag="Tab" Click="KeyButton_Click"/>
                <Button Grid.Column="1" Content="q" Tag="q" Click="KeyButton_Click"/>
                <Button Grid.Column="2" Content="w" Tag="w" Click="KeyButton_Click"/>
                <Button Grid.Column="3" Content="e" Tag="e" Click="KeyButton_Click"/>
                <Button Grid.Column="4" Content="r" Tag="r" Click="KeyButton_Click"/>
                <Button Grid.Column="5" Content="t" Tag="t" Click="KeyButton_Click"/>
                <Button Grid.Column="6" Content="y" Tag="y" Click="KeyButton_Click"/>
                <Button Grid.Column="7" Content="u" Tag="u" Click="KeyButton_Click"/>
                <Button Grid.Column="8" Content="i" Tag="i" Click="KeyButton_Click"/>
                <Button Grid.Column="9" Content="o" Tag="o" Click="KeyButton_Click"/>
                <Button Grid.Column="10" Content="p" Tag="p" Click="KeyButton_Click"/>
                <Button Grid.Column="11" Content="(" Tag="(" Click="KeyButton_Click"/>
                <Button Grid.Column="12" Content=")" Tag=")" Click="KeyButton_Click"/>
                <Button Grid.Column="13" Content="/" Tag="/" Click="KeyButton_Click"/>
                <Button Grid.Column="14" Content="*" Tag="*" Click="KeyButton_Click"/>
            </Grid>

            <!-- Row 3 -->
            <Grid Height="40" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Caps" Tag="Caps" Click="KeyButton_Click"/>
                <Button Grid.Column="1" Content="a" Tag="a" Click="KeyButton_Click"/>
                <Button Grid.Column="2" Content="s" Tag="s" Click="KeyButton_Click"/>
                <Button Grid.Column="3" Content="d" Tag="d" Click="KeyButton_Click"/>
                <Button Grid.Column="4" Content="f" Tag="f" Click="KeyButton_Click"/>
                <Button Grid.Column="5" Content="g" Tag="g" Click="KeyButton_Click"/>
                <Button Grid.Column="6" Content="h" Tag="h" Click="KeyButton_Click"/>
                <Button Grid.Column="7" Content="j" Tag="j" Click="KeyButton_Click"/>
                <Button Grid.Column="8" Content="k" Tag="k" Click="KeyButton_Click"/>
                <Button Grid.Column="9" Content="l" Tag="l" Click="KeyButton_Click"/>
                <Button Grid.Column="10" Content=":" Tag=":" Click="KeyButton_Click"/>
                <Button Grid.Column="11" Content=";" Tag=";" Click="KeyButton_Click"/>
                <Button Grid.Column="12" Content="Enter" Tag="Enter" Click="KeyButton_Click" HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Row 4 -->
            <Grid Height="40" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Shift" Tag="Shift" Click="KeyButton_Click"/>
                <Button Grid.Column="1" Content="z" Tag="z" Click="KeyButton_Click"/>
                <Button Grid.Column="2" Content="x" Tag="x" Click="KeyButton_Click"/>
                <Button Grid.Column="3" Content="c" Tag="c" Click="KeyButton_Click"/>
                <Button Grid.Column="4" Content="v" Tag="v" Click="KeyButton_Click"/>
                <Button Grid.Column="5" Content="b" Tag="b" Click="KeyButton_Click"/>
                <Button Grid.Column="6" Content="n" Tag="n" Click="KeyButton_Click"/>
                <Button Grid.Column="7" Content="m" Tag="m" Click="KeyButton_Click"/>
                <Button Grid.Column="8" Content="&lt;" Tag="&lt;" Click="KeyButton_Click"/>
                <Button Grid.Column="9" Content="&gt;" Tag="&gt;" Click="KeyButton_Click"/>
                <Button Grid.Column="10" Content="!" Tag="!" Click="KeyButton_Click"/>
                <Button Grid.Column="11" Content="?" Tag="?" Click="KeyButton_Click"/>
                <Button Grid.Column="12" Content="↑" Tag="↑" Click="KeyButton_Click"/>
                <Button Grid.Column="13" Content="Lang" Tag="Lang" Click="KeyButton_Click"/>
            </Grid>

            <!-- Row 5 -->
            <Grid Height="40" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="&amp;.."/>
                <Button Grid.Column="1" Content="Ctrl" Tag="Ctrl" Click="KeyButton_Click"/>
                <Button Grid.Column="2" Content="Alt" Tag="Alt" Click="KeyButton_Click"/>
                <Button Grid.Column="3" Content="&quot;" Tag="&quot;" Click="KeyButton_Click"/>
                <Button Grid.Column="4" Content=" " Tag=" " Click="KeyButton_Click" HorizontalAlignment="Stretch"/>
                <Button Grid.Column="5" Content="," Tag="," Click="KeyButton_Click"/>
                <Button Grid.Column="6" Content="." Tag="." Click="KeyButton_Click"/>
                <Button Grid.Column="7" Content="←" Tag="←" Click="KeyButton_Click"/>
                <Button Grid.Column="8" Content="↓" Tag="↓" Click="KeyButton_Click"/>
                <Button Grid.Column="9" Content="→" Tag="→" Click="KeyButton_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>