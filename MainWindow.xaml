				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Content="Shift" Tag="Shift" Click="KeyButton_Click"/>
				<Button Grid.Column="2" Content="z" Tag="z" Click="KeyButton_Click"/>
				<Button Grid.Column="4" Content="x" Tag="x" Click="KeyButton_Click"/>
				<Button Grid.Column="6" Content="c" Tag="c" Click="KeyButton_Click"/>
				<Button Grid.Column="8" Content="v" Tag="v" Click="KeyButton_Click"/>
				<Button Grid.Column="10" Content="b" Tag="b" Click="KeyButton_Click"/>
				<Button Grid.Column="12" Content="n" Tag="n" Click="KeyButton_Click"/>
				<Button Grid.Column="14" Content="m" Tag="m" Click="KeyButton_Click"/>
				<Button Grid.Column="16" Content="&lt;" Tag="&lt;" Click="KeyButton_Click"/>
				<Button Grid.Column="18" Content="&gt;" Tag="&gt;" Click="KeyButton_Click"/>
				<Button Grid.Column="20" Content="!" Tag="!" Click="KeyButton_Click"/>
				<Button Grid.Column="22" Content="?" Tag="?" Click="KeyButton_Click"/>
				<Button Grid.Column="24" Content="↑" Tag="↑" Click="KeyButton_Click"/>
				<Button Grid.Column="26" Content="Lang" Tag="Lang" Click="KeyButton_Click"/>
			</Grid>

			<Grid Height="40">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="*"/>  <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/> <ColumnDefinition Width="4"/>
					<ColumnDefinition Width="40"/>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Content="&amp;.." Tag="&amp;.." Click="KeyButton_Click"/>
				<Button Grid.Column="2" Content="Ctrl" Tag="Ctrl" Click="KeyButton_Click"/>
				<Button Grid.Column="4" Content="Alt" Tag="Alt" Click="KeyButton_Click"/>
				<Button Grid.Column="6" Content="&quot;" Tag="&quot;" Click="KeyButton_Click"/>
				<Button Grid.Column="8" Content="" Tag=" " Click="KeyButton_Click"/>
				<Button Grid.Column="10" Content="," Tag="," Click="KeyButton_Click"/>
				<Button Grid.Column="12" Content="." Tag="." Click="KeyButton_Click"/>
				<Button Grid.Column="14" Content="←" Tag="←" Click="KeyButton_Click"/>
				<Button Grid.Column="16" Content="↓" Tag="↓" Click="KeyButton_Click"/>
				<Button Grid.Column="18" Content="→" Tag="→" Click="KeyButton_Click"/>
			</Grid>

