<Window
    x:Class="VirtualKeyboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="16" Spacing="4">
            
            <!-- Row 1: Total width calculation: 14*40 + 14*4 (spacing) + 96 (Backspace) = 712px -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Content="Esc" Tag="Esc" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="1" Tag="1" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="2" Tag="2" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="3" Tag="3" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="4" Tag="4" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="5" Tag="5" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="6" Tag="6" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="7" Tag="7" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="8" Tag="8" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="9" Tag="9" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="0" Tag="0" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="-" Tag="-" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="+" Tag="+" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="=" Tag="=" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="Backspace" Tag="Backspace" Click="KeyButton_Click" Width="96" Height="40"/>
            </StackPanel>

            <!-- Row 2: Total width: 60 (Tab) + 13*40 + 14*4 (spacing) + 40 (*) = 712px -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Content="Tab" Tag="Tab" Click="KeyButton_Click" Width="60" Height="40"/>
                <Button Content="q" Tag="q" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="w" Tag="w" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="e" Tag="e" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="r" Tag="r" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="t" Tag="t" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="y" Tag="y" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="u" Tag="u" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="i" Tag="i" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="o" Tag="o" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="p" Tag="p" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="(" Tag="(" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content=")" Tag=")" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="/" Tag="/" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="*" Tag="*" Click="KeyButton_Click" Width="40" Height="40"/>
            </StackPanel>

            <!-- Row 3: Total width: 60 (Caps) + 11*40 + 12*4 (spacing) + 112 (Enter) = 712px -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Content="Caps" Tag="Caps" Click="KeyButton_Click" Width="60" Height="40"/>
                <Button Content="a" Tag="a" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="s" Tag="s" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="d" Tag="d" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="f" Tag="f" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="g" Tag="g" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="h" Tag="h" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="j" Tag="j" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="k" Tag="k" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="l" Tag="l" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content=":" Tag=":" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content=";" Tag=";" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="Enter" Tag="Enter" Click="KeyButton_Click" Width="112" Height="40"/>
            </StackPanel>

            <!-- Row 4: Total width: 76 (Shift) + 12*40 + 13*4 (spacing) + 40 (Lang) = 712px -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Content="Shift" Tag="Shift" Click="KeyButton_Click" Width="76" Height="40"/>
                <Button Content="z" Tag="z" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="x" Tag="x" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="c" Tag="c" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="v" Tag="v" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="b" Tag="b" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="n" Tag="n" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="m" Tag="m" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="&lt;" Tag="&lt;" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="&gt;" Tag="&gt;" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="!" Tag="!" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="?" Tag="?" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="↑" Tag="↑" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="Lang" Tag="Lang" Click="KeyButton_Click" Width="40" Height="40"/>
            </StackPanel>

            <!-- Row 5: Total width: 4*40 + 9*4 (spacing) + 340 (Space) + 5*40 = 712px -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Content="&amp;.." Width="40" Height="40"/>
                <Button Content="Ctrl" Tag="Ctrl" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="Alt" Tag="Alt" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="&quot;" Tag="&quot;" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content=" " Tag=" " Click="KeyButton_Click" Width="340" Height="40"/>
                <Button Content="," Tag="," Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="." Tag="." Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="←" Tag="←" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="↓" Tag="↓" Click="KeyButton_Click" Width="40" Height="40"/>
                <Button Content="→" Tag="→" Click="KeyButton_Click" Width="40" Height="40"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>